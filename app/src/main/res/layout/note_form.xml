<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp">
        <TextView
            android:text="출석번호를 입력해주세요."
            android:textColor="@color/skyblue"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/nf_txt_01" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="50dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/nf_edittxt_01"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_line"

            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/nf_edittxt_02"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_line"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/nf_edittxt_03"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_line"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/nf_edittxt_04"
            android:layout_weight="1"
            android:background="@drawable/edit_line"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:text="1"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_01"
            android:layout_marginRight="10dp"/>
        <Button
            android:text="2"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_02"
            android:layout_marginRight="10dp"/>
        <Button
            android:text="3"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_03"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:text="4"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_04"
            android:layout_marginRight="10dp"/>

        <Button
            android:text="5"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_05"
            android:layout_marginRight="10dp"/>
        <Button
            android:text="6"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_06"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:text="7"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_07"
            android:layout_marginRight="10dp"/>
        <Button
            android:text="8"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_08"
            android:layout_marginRight="10dp"/>
        <Button
            android:text="9"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_09"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:text="*"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_orange"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_10"
            android:layout_marginRight="10dp"/>
        <Button
            android:text="0"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_11"
            android:layout_marginRight="10dp"/>
        <Button
            android:text="#"
            android:textSize="@dimen/note_form_txtsize"
            android:padding="@dimen/note_form_btn_padding"
            android:textColor="@color/white"
            android:background="@drawable/btn_orange"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/note_form_btn_margin_bottom"
            android:id="@+id/nf_btn_12"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</LinearLayout>