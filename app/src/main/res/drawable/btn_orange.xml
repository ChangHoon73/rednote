<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape >
            <solid android:color="@color/orange"/>
            <stroke
                android:width="2dp"
                android:color="@color/orange"/>
            <corners
                android:bottomLeftRadius="@dimen/default_corner"
                android:bottomRightRadius="@dimen/default_corner"
                android:topLeftRadius="@dimen/default_corner"
                android:topRightRadius="@dimen/default_corner"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape >
            <gradient
                android:angle="270"
                android:endColor="@color/orange"
                android:startColor="@color/orange"/>
            <stroke
                android:width="2dp"
                android:color="@color/orange"/>
            <corners
                android:bottomLeftRadius="@dimen/default_corner"
                android:bottomRightRadius="@dimen/default_corner"
                android:topLeftRadius="@dimen/default_corner"
                android:topRightRadius="@dimen/default_corner"/>
        </shape>
    </item>
</selector>